<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombreEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Evento" />

    <EditText
        android:id="@+id/etFechaEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha" />

    <EditText
        android:id="@+id/etCapacidadEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacidad"
        android:inputType="number" />

    <EditText
        android:id="@+id/etCuotaEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cuota"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etLatitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Latitud"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etLongitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Longitud"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lat: 0.0, Long: 0.0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnObtenerUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener UbicaciÃ³n Actual" />

    <Button
        android:id="@+id/btnGuardarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Evento" />
</LinearLayout>